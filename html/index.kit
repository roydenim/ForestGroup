    <title>Forest</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e8d20adf40.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./dist/css/hamburger.min.css">
    <link rel="stylesheet" href="./dist/css/style.min.css">
</head>

<body>

    <!-- @include 'nav.kit' -->

    <!-- @include 'header.kit' -->

    <main>
        <section class="aboutus section-padding" id="aboutus">
            <div class="wrapper">
                <h2 class="heading-title">o nas</h2>
                <div class="aboutus__box">
                    <div class="aboutus__box-img">
                        <img src="dist/img/waters-mini.jpg" alt="widok jeziora na tle lasu" class="aboutus__img">
                    </div>
                    <div class="aboutus__box-info">
                        <h3 class="aboutus__title">Niezapomniane przygody</h3>
                        <p class="aboutus__text">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Repellendus
                            perferendis, quas animi blanditiis rem maxime suscipit ex, voluptatibus sed, officiis
                            accusantium deleniti alias? Harum quibusdam quidem id natus optio non, expedita iste numquam
                            provident. Nemo excepturi explicabo praesentium saepe veritatis.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="hero-img">
            <div class="hero-img__shadow"></div>
            <div class="hero-img__text">
                <p>Przygoda dla całej rodziny</p>
            </div>
        </section>

        <section class="offert section-padding" id="offert">
            <div class="wrapper">
                <h2 class="heading-title">oferta</h2>
                <p class="offert__heading">Wybierz jedną z naszych wspaniałych ofert!</p>
                <div class="offert__cards">
                    <div class="offert__card">
                        <h3 class="offert__card-info-title">Demo</h3>
                        <p class="offert__card-info-price">$0</p>
                        <ul class="offert__card-info-list">
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item minus"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offert__card-info-list-item minus"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offert__card-info-list-item minus"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                        </ul>
                        <button class="offert__card-btn">Wybierz</button>
                    </div>
                    <div class="offert__card">
                        <h3 class="offert__card-info-title">Standart</h3>
                        <p class="offert__card-info-price">$99</p>
                        <ul class="offert__card-info-list">
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item minus"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offert__card-info-list-item minus"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                        </ul>
                        <button class="offert__card-btn offert__card-btn--special">Wybierz</button>
                    </div>
                    <div class="offert__card">
                        <h3 class="offert__card-info-title">Premium</h3>
                        <p class="offert__card-info-price">$299</p>
                        <ul class="offert__card-info-list">
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                            <li class="offert__card-info-list-item"><i class="fa-solid fa-check"></i> opcja w pakiecie
                            </li>
                        </ul>
                        <button class="offert__card-btn">Wybierz</button>
                    </div>
                </div>
                <a href="offerts.html" class="offert__extra-btn">Poznaj więcej ofert</a>
            </div>
        </section>
    </main>

    <!-- @include 'footer.kit' -->

